<%- include('../partials/header.ejs') %>

<body>

    <div class="container">

        <%- include('../partials/menu.ejs') %>

        <div class="card">

            <div class="card-header">
                <h3> Editar Fabricante</h3>
                <p>Id: <%= fabricantes.data.id_fabricante %></p>
                <p>Email: <%= fabricantes.data.email %></p>
                <p>Telefone: <%= fabricantes.data.telefone %></p>
                <p>Endereço: <%= fabricantes.data.endereco %></p>
            </div>

            <div class="card-body">

                <form action="/editarFabricante" method="post">

                    <label for="id_fabricante"></label>
                    <input class="form-control" type="text" 
                    name="id_fabricante" id="id_fabricante"
                    placeholder="IDENTIFICAÇÃO NÃO PODE SER EDITADA">

                    <label for="nome"></label>
                    <input class="form-control" type="text" 
                    name="nome" id="nome"
                    placeholder="<%= fabricantes.data.nome %>">

                    <label for="email"></label>
                    <input class="form-control" type="text" 
                    name="email" id="email"
                    placeholder="<%= fabricantes.data.email %>">

                    <label for="telefone"></label>
                    <input class="form-control" type="text" 
                    name="telefone" id="telefone"
                    placeholder="<%= fabricantes.data.telefone %>">                    

                    <input type="hidden" name="id_fabricante" value="<%= fabricantes.data.id_fabricante %>">

                    <button class="btn btn-success mt-2">Editar</button>

                </form>

            </div>

        </div>

    </div>

</body>

<%- include('../partials/footer.ejs') %>

</html>