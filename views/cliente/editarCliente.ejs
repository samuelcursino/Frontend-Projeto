<%- include('../partials/header.ejs') %>

<body>

    <div class="container">

        <%- include('../partials/menu.ejs') %>

        <div class="card">

            <div class="card-header">
                <h3> Editar Cliente</h3>
                <%= cliente.data.cpf_cliente %>
                <%= cliente.data.email_cliente %>
                <%= cliente.data.telefone_cliente %>
                <%= cliente.data.endereco_cliente %>
            </div>

            <div class="card-body">

                <form action="/editarCategoria" method="post">

                    <label for="nome_categoria"></label>
                    <input class="form-control" type="text" 
                    name="nome_categoria" id="nome_categoria"
                    placeholder="<%= categoria.data.nome_categoria %>">

                    <input type="hidden" name="cod_categoria" value="<%= categoria.data.cod_categoria %>">

                    <button class="btn btn-success mt-2">CADASTRAR</button>

                </form>

            </div>

        </div>

    </div>

</body>

