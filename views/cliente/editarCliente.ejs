<%- include('../partials/header.ejs') %>

<body>

    <div class="container">

        <%- include('../partials/menu.ejs') %>

        <div class="card">

            <div class="card-header">
                <h3> Editar Cliente</h3>
                <%= clientes.data.cpf %>
                <%= clientes.data.email %>
                <%= clientes.data.telefone %>
                <%= clientes.data.endereco %>
            </div>

            <div class="card-body">

                <form action="/editarCliente" method="post">

                    <label for="cpf"></label>
                    <input class="form-control" type="text" 
                    name="cpf" id="cpf"
                    placeholder="<%= cliente.data.cpf %>">
                    <input type="hidden" name="cpf" value="<%= cliente.data.cpf %>">

                    <label for="email"></label>
                    <input class="form-control" type="text" 
                    name="email" id="email"
                    placeholder="<%= cliente.data.email %>">
                    <input type="hidden" name="email" value="<%= cliente.data.email %>">

                    <label for="telefone"></label>
                    <input class="form-control" type="text" 
                    name="telefone" id="cpf"
                    placeholder="<%= cliente.data.telefone %>">
                    <input type="hidden" name="telefone" value="<%= cliente.data.telefone %>">

                    <label for="endereco"></label>
                    <input class="form-control" type="text" 
                    name="endereco" id="cpf"
                    placeholder="<%= cliente.data.endereco %>">
                    <input type="hidden" name="endereco" value="<%= cliente.data.endereco %>">

                    <button class="btn btn-success mt-2">CADASTRAR</button>

                </form>

            </div>

        </div>

    </div>

</body>

<%- include('../partials/footer.ejs') %>

</html>